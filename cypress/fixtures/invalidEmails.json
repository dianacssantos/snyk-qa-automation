{
  "invalidEmails": [
    {
      "email": "thisuser2",
      "expectedMessage": "include an '@'" ,
      "description": "Missing @ symbol - basic email structure validation"
    },
    {
      "email": "thisuser2@",
      "expectedMessage": "enter a part following '@'",
      "description": "Incomplete email - missing domain after @ symbol"
    },
    {
      "email": "thisuser2@@domain",
      "expectedMessage": "should not contain the symbol '@'",
      "description": "Multiple @ symbols - invalid email syntax"
    },
    {
      "email": "thisuser2@domain",
      "expectedMessage": "include a '.'" ,
      "description": "Missing top-level domain - no dot in domain part"
    },
    {
      "email": "user2@domain.",
      "expectedMessage": "wrong position",
      "description": "Trailing dot - dot at end of domain without TLD"
    },
    {
      "email": "user2@-domain",
      "expectedMessage": "enter an email address",
      "description": "Hyphen at domain start - invalid domain name format"
    },
    {
      "email": ".user2@domain.com",
      "expectedMessage": "enter an email address",
      "description": "Leading dot in local part - invalid local section format"
    },
    {
      "email": "u..ser2@domain.com",
      "expectedMessage": "enter an email address",
      "description": "Consecutive dots in local part - invalid character sequence"
    }
  ]
}
